('other-income', '기타 수입', 'income'),
('food', '식비', 'expense'),
('transportation', '교통비', 'expense'),
('housing', '주거비', 'expense'),
('utilities', '공과금', 'expense'),
('shopping', '쇼핑/의류', 'expense'),
('entertainment', '여가/오락', 'expense'),
('healthcare', '의료/건강', 'expense'),
